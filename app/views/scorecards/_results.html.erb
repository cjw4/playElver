 <div id="outputHeader">
	<span class="dateHeader">Date</span>
	<span class="scoreHeader">Score</span>
	<span class="teesHeader">Tees</span>
</div>

<% @scorecards.each do |scorecard| %>

<div class="output">
	<span class="date"><%= scorecard.created_at.strftime("%b %e, %Y") %></span>
	<span class="scoreContainer"><%= scorecard.total %>
		<span class="score">(<%= score(scorecard) %>)</span>
		<% if scorecard.large_scorecard %>
		<span class="toggleOutput"><input type="button" value="<" class="showBtn" /></span>
		</span>
		<% else %>
		<span class="toggleOutput"></span></span>
		<% end %>
	<% if scorecard.pro? %>
	<span class="teesContainer">Pro</span>
	<% else %>
	<span class="teesContainer">Am</span>
	<% end  %>
	<span class="deleteBtnContainer"><%= button_to "x", scorecard, :method => :delete, :confirm => "Are you sure?", :class => "deleteBtn" %></span>

<div class="outputSC">
	<div>
	  	<span class="holeOutputLabel">1</span>
		<span class="holeOutputLabel">2</span>
		<span class="holeOutputLabel">3</span>
		<span class="holeOutputLabel">4</span>
		<span class="holeOutputLabel">5</span>
		<span class="holeOutputLabel">6</span>
		<span class="holeOutputLabel">7</span>
		<span class="holeOutputLabel">8</span>
		<span class="holeOutputLabel">9</span>
	  </div>
	<div class="holes">	
		<span class="holeOutput"><%= scorecard.hole1 %></span>
		<span class="holeOutput"><%= scorecard.hole2 %></span>
		<span class="holeOutput"><%= scorecard.hole3 %></span>
		<span class="holeOutput"><%= scorecard.hole4 %></span>
		<span class="holeOutput"><%= scorecard.hole5 %></span>
		<span class="holeOutput"><%= scorecard.hole6 %></span>
		<span class="holeOutput"><%= scorecard.hole7 %></span>
		<span class="holeOutput"><%= scorecard.hole8 %></span>
		<span class="holeOutput"><%= scorecard.hole9 %></span>
	</div>
	<div>
	  	<span class="holeOutputLabel">10</span>
		<span class="holeOutputLabel">11</span>
		<span class="holeOutputLabel">12</span>
		<span class="holeOutputLabel">13</span>
		<span class="holeOutputLabel">14</span>
		<span class="holeOutputLabel">15</span>
		<span class="holeOutputLabel">16</span>
		<span class="holeOutputLabel">17</span>
		<span class="holeOutputLabel">18</span>
	  </div>
	<div class="holes">
  		<span class="holeOutput"><%= scorecard.hole10 %></span>
	    <span class="holeOutput"><%= scorecard.hole11 %></span>
	    <span class="holeOutput"><%= scorecard.hole12 %></span>
	    <span class="holeOutput"><%= scorecard.hole13 %></span>
	    <span class="holeOutput"><%= scorecard.hole14 %></span>
	    <span class="holeOutput"><%= scorecard.hole15 %></span>
	    <span class="holeOutput"><%= scorecard.hole16 %></span>
	    <span class="holeOutput"><%= scorecard.hole17 %></span>
	    <span class="holeOutput"><%= scorecard.hole18 %></span>
	</div>
</div>
</div><!-- end outputSC div -->
	
<% end %>