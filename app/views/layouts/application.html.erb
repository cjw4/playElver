<!DOCTYPE html>
<html>
<head>
  <title><%= title %></title>
  <%= stylesheet_link_tag :all %>
  <%= javascript_include_tag :defaults %>
  <%= csrf_meta_tag %>
</head>
<body>
<div id="wrapper">
  <div id="navigation">
	
	<ul>
		  <li><%= image_tag 'header_pic.png', :height => "70", :width => "300" %></li>
		<% if user_signed_in? %>
		  <li><%= link_to "Scorecard", scorecards_path %></li>
		  <li><%= link_to "Leaderboard", leaderboard_path %></li>
		  <li><%= link_to "Users", users_path %>
		  <li>Signed in as <%= current_user.name %>.</li> 
		  <li>Not you? <%= link_to "Sign Out", destroy_user_session_path %></li>
		  
		<% else %>
		  <li><%= link_to "Home", root_path %></li>
		  <li><%= link_to "Sign Up", new_user_registration_path %></li>
		  <li><%= link_to "Sign In", new_user_session_path %></li>
		<% end %>
	</ul>
  </div><!-- end navigation div-->

  <% flash.each do |name, msg| %>
  	<%= content_tag :div, msg, :class => "flash_#{name}" %>
  <% end %>
  
  <%= yield %>
</div><!-- end wrapper div -->
</body>
</html>
