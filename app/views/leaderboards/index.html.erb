<h2>Leaderboards!</h2>

<div id="topTen">
	<h3>Top Ten scores of 2011!</h3>
	<% @scores.each do |score| %>
	  <div>
	  <%= @i %>. <strong><%= score.user.name %></strong>
	  <%= score.total %>
	  (<%= score.created_at.month %>/<%= score.created_at.day %>/<%= score.created_at.year %>)
	  </div>
	  <% @i = @i + 1 %>
	<% end %>
</div>
